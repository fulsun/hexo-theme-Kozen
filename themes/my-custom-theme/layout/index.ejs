<div class="posts">
    <% page.posts.each(function(post) { %>
        <article class="post">
            <h2><a href="<%- url_for(post.path) %>"><%- post.title %></a></h2>
            <time><%- date(post.date, 'YYYY-MM-DD') %></time>
            <div class="content"><%- post.excerpt || post.content %></div>
        </article>
    <% }); %>
</div>

<div class="pagination">
    <% if (page.prev) { %>
        <a href="<%- url_for(page.prev_link || page.prev) %>">上一页</a>
    <% } %>
    <% if (page.next) { %>
        <a href="<%- url_for(page.next_link || page.next) %>">下一页</a>
    <% } %>
</div>
