<!-- 文章卡片列表 -->
<div class="posts space-y-6">
    <% page.posts.each(function(post) { %>
        <%- partial('partials/post-card', { post: post }) %>
    <% }); %>
</div>

<!-- 分页导航 -->
<div class="pagination mt-8 flex justify-center gap-4">
    <% if (page.prev) { %>
        <a href="<%- url_for(page.prev_link || page.prev) %>" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded transition-colors">上一页</a>
    <% } %>
    <% if (page.next) { %>
        <a href="<%- url_for(page.next_link || page.next) %>" class="px-4 py-2 bg-gray-100 hover:bg-gray-200 rounded transition-colors">下一页</a>
    <% } %>
</div>