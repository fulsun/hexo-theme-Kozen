<!--  -->
<div class="posts">
    <!-- 文章卡片列表 -->
        <% page.posts.each(function(post) { %>
            <%- partial('partials/post-card', {post: post}) %>
                <% }); %>
</div>

<!-- 分页导航 -->
<div class="pagination">
    <% if (page.prev) { %>
        <a href="<%- url_for(page.prev_link || page.prev) %>">上一页</a>
        <% } %>
            <% if (page.next) { %>
                <a href="<%- url_for(page.next_link || page.next) %>">下一页</a>
                <% } %>
</div>