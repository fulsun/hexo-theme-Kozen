<article class="post">
    <header class="post-header">
        <h1><%= page.title %></h1>
        <time><%- date(page.date, 'YYYY-MM-DD HH:mm:ss') %></time>
    </header>
    
    <div class="post-content">
        <%- page.content %>
    </div>
    
    <% if (page.tags && page.tags.length > 0) { %>
        <div class="post-tags">
            标签: 
            <% page.tags.each(function(tag) { %>
                <a href="<%- url_for(tag.path) %>" class="tag"><%= tag.name %></a>
            <% }); %>
        </div>
    <% } %>
</article>