<!-- 文章卡片组件 包含图片、标题、时间、摘要、阅读更多按钮 -->
<!-- class：边框、圆角、内边距4、flex布局、两端对齐、垂直居中 -->
<div class="border border-gray-200 rounded-md h-[250px]  flex items-center justify-between">
    <!-- 左侧图片 class: 高度100%、圆角、对象包含 -->
    <img src="<%- post.cover %>" alt="<%- post.title %>" class="w-2/5 h-full rounded-cover object-cover">
    <!-- 右侧内容 -->
    <div class="w-3/5 px-4 leading-loose flex flex-col justify-between">
        <!-- 文章标题 -->
        <div class="text-2xl font-bold mt-0"><a href="<%- url_for(post.path) %>"><%- post.title %></a></div>
        <!-- 文章时间 -->
        <div class="text-sm text-gray-500">
            <p class="fa fa-calendar-alt"></p> 发布时间：<%- date(post.date, 'YYYY-MM-DD' ) %>
        </div>
        <div class="content"><%- post.excerpt || post.content.substring(0, 400) %></div>
        <!-- class：阅读更多按钮、蓝色文字、悬停红色、过渡颜色、鼠标指针 边框实线 -->
        <div class="text-right text-black-600 hover:text-red-600 transition-colors cursor-pointer">
            <a  class="border border-solid p-2  rounded" href="<%- url_for(post.path) %>">点击阅读全文 >></a>
        </div>
    </div>